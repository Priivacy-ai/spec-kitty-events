{
  "$id": "spec-kitty-events/artifact_identity",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Canonical identity for one artifact instance.\n\nartifact_class is the SINGLE source of truth for artifact taxonomy.\nEvent payloads MUST NOT duplicate this field at the top level.",
  "properties": {
    "artifact_class": {
      "enum": [
        "input",
        "workflow",
        "output",
        "evidence",
        "policy",
        "runtime"
      ],
      "title": "Artifact Class",
      "type": "string"
    },
    "mission_key": {
      "minLength": 1,
      "title": "Mission Key",
      "type": "string"
    },
    "path": {
      "description": "Repository-relative path",
      "minLength": 1,
      "title": "Path",
      "type": "string"
    },
    "run_id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Run Id"
    },
    "wp_id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Wp Id"
    }
  },
  "required": [
    "mission_key",
    "path",
    "artifact_class"
  ],
  "title": "ArtifactIdentity",
  "type": "object"
}
