{
  "$defs": {
    "ParticipantIdentity": {
      "description": "SaaS-minted, mission-scoped participant identity.",
      "properties": {
        "display_name": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Human-readable name for display",
          "title": "Display Name"
        },
        "participant_id": {
          "description": "SaaS-minted, mission-scoped unique identifier",
          "minLength": 1,
          "title": "Participant Id",
          "type": "string"
        },
        "participant_type": {
          "description": "Participant category",
          "enum": [
            "human",
            "llm_context"
          ],
          "title": "Participant Type",
          "type": "string"
        },
        "session_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "SaaS-issued session identifier",
          "title": "Session Id"
        }
      },
      "required": [
        "participant_id",
        "participant_type"
      ],
      "title": "ParticipantIdentity",
      "type": "object"
    }
  },
  "$id": "spec-kitty-events/participant_invited_payload",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Typed payload for ParticipantInvited events.",
  "properties": {
    "invited_by": {
      "description": "participant_id of inviter",
      "minLength": 1,
      "title": "Invited By",
      "type": "string"
    },
    "mission_id": {
      "description": "Target mission",
      "minLength": 1,
      "title": "Mission Id",
      "type": "string"
    },
    "participant_id": {
      "description": "Invited participant",
      "minLength": 1,
      "title": "Participant Id",
      "type": "string"
    },
    "participant_identity": {
      "$ref": "#/$defs/ParticipantIdentity",
      "description": "Full structured identity"
    }
  },
  "required": [
    "participant_id",
    "participant_identity",
    "invited_by",
    "mission_id"
  ],
  "title": "ParticipantInvitedPayload",
  "type": "object"
}
