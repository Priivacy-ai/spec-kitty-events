{
  "$id": "spec-kitty-events/provenance_ref",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Source trace connecting an artifact or event to its authoritative origin.",
  "properties": {
    "actor_id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Actor Id"
    },
    "actor_kind": {
      "anyOf": [
        {
          "enum": [
            "human",
            "llm",
            "system"
          ],
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Actor Kind"
    },
    "git_ref": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Git Ref"
    },
    "git_sha": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Git Sha"
    },
    "revised_at": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "ISO 8601",
      "title": "Revised At"
    },
    "source_event_ids": {
      "anyOf": [
        {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Source Event Ids"
    }
  },
  "title": "ProvenanceRef",
  "type": "object"
}
