{
  "$defs": {
    "AuditArtifactRef": {
      "description": "Links an audit report to its content hash and provenance.",
      "properties": {
        "content_hash": {
          "$ref": "#/$defs/ContentHashRef"
        },
        "provenance": {
          "$ref": "#/$defs/ProvenanceRef"
        },
        "report_path": {
          "minLength": 1,
          "title": "Report Path",
          "type": "string"
        }
      },
      "required": [
        "report_path",
        "content_hash",
        "provenance"
      ],
      "title": "AuditArtifactRef",
      "type": "object"
    },
    "AuditSeverity": {
      "enum": [
        "info",
        "warning",
        "error",
        "critical"
      ],
      "title": "AuditSeverity",
      "type": "string"
    },
    "AuditVerdict": {
      "enum": [
        "pass",
        "pass_with_warnings",
        "fail",
        "blocked_decision_required"
      ],
      "title": "AuditVerdict",
      "type": "string"
    },
    "ContentHashRef": {
      "description": "Content fingerprint with optional size and encoding metadata.",
      "properties": {
        "algorithm": {
          "enum": [
            "sha256",
            "sha512",
            "md5"
          ],
          "title": "Algorithm",
          "type": "string"
        },
        "encoding": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Encoding"
        },
        "hash": {
          "description": "Hex-encoded content hash",
          "minLength": 1,
          "title": "Hash",
          "type": "string"
        },
        "size_bytes": {
          "anyOf": [
            {
              "minimum": 0,
              "type": "integer"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Size Bytes"
        }
      },
      "required": [
        "hash",
        "algorithm"
      ],
      "title": "ContentHashRef",
      "type": "object"
    },
    "ProvenanceRef": {
      "description": "Source trace connecting an artifact or event to its authoritative origin.",
      "properties": {
        "actor_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Actor Id"
        },
        "actor_kind": {
          "anyOf": [
            {
              "enum": [
                "human",
                "llm",
                "system"
              ],
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Actor Kind"
        },
        "git_ref": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Git Ref"
        },
        "git_sha": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Git Sha"
        },
        "revised_at": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "ISO 8601",
          "title": "Revised At"
        },
        "source_event_ids": {
          "anyOf": [
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Source Event Ids"
        }
      },
      "title": "ProvenanceRef",
      "type": "object"
    }
  },
  "$id": "spec-kitty-events/mission_audit_completed_payload",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Payload for MissionAuditCompleted events (FR-006).\n\nartifact_ref is required \u2014 not Optional. If artifact generation fails,\nthe emitter MUST emit MissionAuditFailed instead.",
  "properties": {
    "actor": {
      "minLength": 1,
      "title": "Actor",
      "type": "string"
    },
    "artifact_ref": {
      "$ref": "#/$defs/AuditArtifactRef"
    },
    "feature_slug": {
      "minLength": 1,
      "title": "Feature Slug",
      "type": "string"
    },
    "findings_count": {
      "minimum": 0,
      "title": "Findings Count",
      "type": "integer"
    },
    "mission_id": {
      "minLength": 1,
      "title": "Mission Id",
      "type": "string"
    },
    "run_id": {
      "minLength": 1,
      "title": "Run Id",
      "type": "string"
    },
    "severity": {
      "$ref": "#/$defs/AuditSeverity"
    },
    "summary": {
      "title": "Summary",
      "type": "string"
    },
    "verdict": {
      "$ref": "#/$defs/AuditVerdict"
    }
  },
  "required": [
    "mission_id",
    "run_id",
    "feature_slug",
    "actor",
    "verdict",
    "severity",
    "findings_count",
    "artifact_ref",
    "summary"
  ],
  "title": "MissionAuditCompletedPayload",
  "type": "object"
}
